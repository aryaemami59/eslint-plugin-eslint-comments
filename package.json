{
    "name": "@eslint-community/eslint-plugin-eslint-comments",
    "version": "0.0.0-semantically-released",
    "description": "Additional ESLint rules for ESLint directive comments.",
    "engines": {
        "node": "^20.19.0 || ^22.13.0 || >=24.0.0"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "files": [
        "dist",
        "lib"
    ],
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "default": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        },
        "./configs": {
            "import": {
                "types": "./dist/configs.d.ts",
                "default": "./dist/configs.js"
            },
            "default": {
                "types": "./dist/configs.d.cts",
                "default": "./dist/configs.cjs"
            }
        },
        "./package.json": "./package.json"
    },
    "typesVersions": {
        "*": {
            "configs": [
                "./dist/configs.d.ts"
            ]
        }
    },
    "sideEffects": false,
    "peerDependencies": {
        "eslint": "^8.0.0 || ^9.0.0"
    },
    "dependencies": {
        "escape-string-regexp": "^4.0.0",
        "ignore": "^7.0.5"
    },
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.18.2",
        "@babel/core": "^7.28.6",
        "@babel/eslint-parser": "^7.28.6",
        "@eslint/core": "^0.17.0",
        "@eslint/css": "^0.14.1",
        "@eslint/js": "^9.39.2",
        "@types/cross-spawn": "^6.0.6",
        "@types/node": "^25.0.7",
        "@types/semver": "^7.7.1",
        "@vuepress/plugin-pwa": "^1.9.10",
        "cross-spawn": "^7.0.6",
        "esbuild": "^0.27.2",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-eslint-plugin": "^7.3.0",
        "expect-type": "^1.3.0",
        "monaco-editor": "^0.55.1",
        "npm-run-all2": "^8.0.4",
        "nyc": "^17.1.0",
        "opener": "^1.5.2",
        "prettier": "^3.7.4",
        "rimraf": "^6.1.2",
        "rolldown": "^1.0.0-beta.59",
        "semver": "^7.7.3",
        "tsdown": "^0.20.0-beta.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.0",
        "vite": "^6.4.1",
        "vite-plugin-eslint4b": "^0.6.0",
        "vitepress": "^1.6.4",
        "vitest": "^4.0.17"
    },
    "scripts": {
        "build": "npm run clean && tsdown --config-loader='unrun' --config=tsdown.config.mts",
        "prepack": "npm run build",
        "preversion": "npm test",
        "version": "node scripts/update && git add .",
        "postversion": "git push && git push --tags",
        "clean": "rimraf -v .nyc_output/ coverage/ docs/.vitepress/cache/ dist/ .rolldown/",
        "docs:build": "vitepress build docs",
        "docs:watch": "vitepress dev docs",
        "format": "npm run -s format:prettier -- --write",
        "format:prettier": "prettier .",
        "format:check": "npm run -s format:prettier -- --check",
        "lint": "run-p lint:*",
        "lint:eslint": "eslint --config=eslint.config.mjs .",
        "lint:format": "npm run -s format:check",
        "test": "vitest --run --config=vitest.config.mts",
        "typecheck": "tsc -p tsconfig.json",
        "check-exports": "attw --pack",
        "coverage": "nyc report --reporter lcov && opener coverage/lcov-report/index.html",
        "watch": "npm run -s test -- --watch --growl"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eslint-community/eslint-plugin-eslint-comments"
    },
    "keywords": [
        "eslint",
        "eslintplugin",
        "eslint-plugin",
        "plugin",
        "comment",
        "comments",
        "directive",
        "global",
        "globals",
        "exported",
        "eslint-env",
        "eslint-enable",
        "eslint-disable",
        "eslint-disable-line",
        "eslint-disable-next-line"
    ],
    "author": "Toru Nagashima",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/eslint-community/eslint-plugin-eslint-comments/issues"
    },
    "homepage": "https://github.com/eslint-community/eslint-plugin-eslint-comments#readme",
    "funding": "https://opencollective.com/eslint"
}
